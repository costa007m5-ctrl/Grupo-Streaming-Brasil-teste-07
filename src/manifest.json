      "description": "Veja seu saldo e transações",
      "url": "/?view=wallet",
      "icons": [{ "src": "https://img.icons8.com/fluency/96/wallet.png", "sizes": "96x96" }]
    },
    {
      "name": "Meu Perfil",
      "short_name": "Perfil",
      "description": "Acesse suas configurações e perfil",
      "url": "/?view=profile",
      "icons": [{ "src": "https://img.icons8.com/fluency/96/user-male-circle.png", "sizes": "96x96" }]
    }
  ],
  "share_target": {
    "action": "/?share-target",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "prefer_related_applications": true,
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.example.app1",
      "id": "com.example.app1"
    },
    {
      "platform": "itunes",
      "url": "https://itunes.apple.com/app/example-app1/id123456789"
    }
  ],
  "scope_extensions": [
    { "origin": "*.grupostreamingbrasil.com.br" },
    { "origin": "grupostreamingbrasil.com.br" },
    { "origin": "*.vercel.app" },
    { "origin": "*.supabase.co" },
    { "origin": "*.icons8.com" },
    { "origin": "*.ibb.co" },
    { "origin": "aistudiocdn.com" },
    { "origin": "www.gstatic.com" },
    { "origin": "*.themoviedb.org" },
    { "origin": "logodownload.org" },
    { "origin": "*.dropbox.com" },
    { "origin": "*.disneyplus.com" }
  ],
  "note_taking": {
    "new_note_url": "/new-note",
    "needs_account": true
  },
  "launch_handler": {
    "client_mode": ["focus-existing", "auto"]
  },
  "edge_side_panel": {
    "preferred_width": 480
  },
  "file_handlers": [
    {
      "action": "/handle-file",
      "accept": {
        "text/*": [".txt", ".md", ".csv"]
      },
      "icons": [
        {
          "src": "https://img.icons8.com/fluency/96/txt.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ],
      "launch_type": "single-client"
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+notes",
      "url": "/new-note?text=%s"
    }
  ],
  "widgets": [
